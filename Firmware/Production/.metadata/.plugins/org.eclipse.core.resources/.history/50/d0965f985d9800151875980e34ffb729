#ifndef SOURCES_SYSTEM_TIMER_H_
#define SOURCES_SYSTEM_TIMER_H_

typedef union SYSTEM_TIMER	{
	struct COUNTER_DIVISIONS{
		uint32_t	usec	:20;
		uint8_t		sec		:6;
		uint8_t		min		:6;
	};
	uint64_t timestamp;
}sysTimer_t;



#endif /* SOURCES_SYSTEM_TIMER_H_ */
