#include <SDCard.h>

SDCard::SDCard() {
	// TODO Auto-generated constructor stub

}

SDCard::~SDCard() {
	// TODO Auto-generated destructor stub
}

uint8_t *SDCard::getRxBuffer(void)	{
	return rxBuffer;
}

void SDCard::fillTxBuffer(const uint8_t data[], uint8_t size)	{
	uint8_t i = 0;
	for(i; i<size; i++)	{
		txBuffer[i]=data[i];
	}
}

void SDCard::sendData(const uint8_t data[], uint8_t size)	{
	fillTxBuffer(data, size);
	DSPI_DRV_MasterTransfer(sd_spi_IDX, &sd_spi_BusConfig0, txBuffer, rxBuffer, 1);
}
